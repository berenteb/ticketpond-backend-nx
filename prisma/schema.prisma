// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id                 String               @id @default(uuid())
  internalId         String               @unique @default(uuid())
  firstName          String
  lastName           String
  email              String
  address            String
  phone              String
  cart               Cart?
  order              Order[]
  MerchantOnCustomer MerchantOnCustomer[]
}

model Merchant {
  id                 String               @id @default(uuid())
  name               String
  description        String
  email              String
  address            String
  phone              String
  experiences        Experience[]
  MerchantOnCustomer MerchantOnCustomer[]
}

model MerchantOnCustomer {
  id         String   @id @default(uuid())
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  merchantId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId String
}

model Experience {
  id          String   @id @default(uuid())
  name        String
  description String
  startDate   DateTime
  endDate     DateTime
  bannerImage String
  merchant    Merchant @relation(fields: [merchantId], references: [id], onDelete: Restrict)
  merchantId  String
  tickets     Ticket[]
}

model Ticket {
  id           String      @id @default(uuid())
  name         String
  description  String
  price        Float
  validFrom    DateTime
  validTo      DateTime
  experience   Experience  @relation(fields: [experienceId], references: [id], onDelete: Restrict)
  experienceId String
  cartItem     CartItem[]
  orderItem    OrderItem[]
}

model Cart {
  id         String     @id @default(uuid())
  customer   Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId String     @unique
  items      CartItem[]
}

model CartItem {
  id       String @id @default(uuid())
  cart     Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId   String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId String
}

model Order {
  id            String        @id @default(uuid())
  serialNumber  String        @unique
  customer      Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId    String
  createdAt     DateTime      @default(now())
  items         OrderItem[]
  orderStatus   OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(UNPAID)
}

model OrderItem {
  id           String @id @default(uuid())
  order        Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId      String
  ticket       Ticket @relation(fields: [ticketId], references: [id], onDelete: Restrict)
  ticketId     String
  price        Float
  serialNumber String @unique
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  FAIL
  SUCCESS
}
